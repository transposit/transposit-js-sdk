{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "Node",
    "lib": ["es6", "dom"],
    "target": "es5",
    "module": "esnext",
    "declaration": true,
    "outDir": "types",
    "sourceMap": true,
  },
  "include": ["./src"]
}
